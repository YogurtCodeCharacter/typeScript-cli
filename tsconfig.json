{
	"compilerOptions": {
		// Target latest version of ECMAScript.
        "target": "es5",
		"jsx": "react",
		"module": "CommonJS",
		// Search under node_modules for non-relative imports.
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": true,
		"sourceMap": true,
		"noImplicitThis": true,
		"removeComments": true,
		"noEmit": true,
	},

	"include": [
		"src"
	]
}
